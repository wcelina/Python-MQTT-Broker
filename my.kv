#:kivy 2.1.0

<API_Login>:
    apikey:apikey 

    BoxLayout:
        orientation: "vertical"
        cols:1
        padding:30
        spacing:15

        BoxLayout:
            cols:2
            Label:
                text: "Enter your API key:"
                pos_hint: {'center_x': 0.5}
                size_hint: (None, None)
                width:150
                height:35
            TextInput:
                id:apikey
                hint_text: "ex. a75083...."
                multiline:False
                font_size:18
                size_hint: (None, None)
                width:250
                height:35
        Button:
            text: "Enter"
            font_size:26
            pos_hint: {'center_x': 5.5}
            size_hint: (None, None)
            width:100
            height:40
            on_press: root.button_func()
            background_normal:''
            background_color:'#8c302a'